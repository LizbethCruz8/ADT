package com.aragon.juegodelavida;

    public class Array2d {
        private int renglones;
        private int columnas;
        private int[][] datos;

        public Array2d(int rows, int cols) {
            this.renglones = rows;
            this.columnas = cols;
            this.datos = new int[rows][cols];
        }

        public int getNumRows() {
            return renglones;
        }

        public int getNumCols() {
            return columnas;
        }

        public void limpiar(int value) {
            for (int i = 0; i < renglones; i++) {
                for (int j = 0; j < columnas; j++) {
                    datos[i][j] = value;
                }
            }
        }

        public void setItem(int row, int col, int value) {
            if (row >= 0 && row < renglones && col >= 0 && col < columnas) {
                datos[row][col] = value;
            }
        }

        public int getItem(int row, int col) {
            if (row >= 0 && row < renglones && col >= 0 && col < columnas) {
                return datos[row][col];
            }
            return -1;
        }


        public String toString() {
            StringBuilder result = new StringBuilder();
            for (int i = 0; i < renglones; i++) {
                for (int j = 0; j < columnas; j++) {
                    result.append(datos[i][j]).append(" ");
                }
                result.append("\n");
            }
            return result.toString();
        }
    }

